<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/currentActivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="dasfsfdsf"
        android:textSize="18dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        />
    <LinearLayout
        android:id="@+id/activityDetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/currentActivityTextView"
        android:layout_margin="8dp"
        android:weightSum="1"
        >
        <LinearLayout
            android:id="@+id/timeLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.23"
            android:weightSum="1"
            >

            <LinearLayout
                android:id="@+id/startHourLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="18dp"
                >

                <TextView
                    android:id="@+id/startHourLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#adc2d6"
                    android:text="Start Hour"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/startHourTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:background="@drawable/edit_inf_frame"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/endHourLayout"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingLeft="18dp"
                >

                <TextView
                    android:id="@+id/endHourLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#adc2d6"
                    android:text="End Hour"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    />
                <TextView
                    android:id="@+id/endHourTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:background="@drawable/edit_inf_frame"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.23"
            android:paddingLeft="18dp" >

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#adc2d6"
                android:text="Location"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#212121"
                android:background="@drawable/edit_inf_frame"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.23"
            android:paddingLeft="18dp" >

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#adc2d6"
                android:text="Description"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#212121"
                android:background="@drawable/edit_inf_frame"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/editButtonLayer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.23"
            android:weightSum="1"

            >
            <Button
                android:id="@+id/editActivityButton"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="4dp"
                android:background="#adc2d6"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Edit Activity"
                />
            <Button
                android:id="@+id/deleteActivityButton"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="4dp"
                android:background="#adc2d6"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Delete Activity"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>